    </changeSet>

    <changeSet id="2024-06-05-12" author="vuk">
        <createView viewName="summary" replaceIfExists="true">
            SELECT date_format((curdate() - interval `seq`.`day` day), '%b %d') AS `dataLabel`,
                   (curdate() - interval `seq`.`day` day)                       AS `dateRange`,
                   (SELECT count(0)
                    FROM `logs` `l`
                    WHERE (`l`.`stage` = 'INGRESS')
                      AND (`l`.`created_on` >= (curdate() - interval `seq`.`day` day))
                      AND (`l`.`created_on` &lt; ((curdate() - interval `seq`.`day` day) + interval 1 day)) ) AS `ingressLogCount`,
                (
                    SELECT
                        count(0)
                    FROM
                        `logs` `l`
                    WHERE
                        (`l`.`stage` = 'EGRESS')
                        AND (`l`.`created_on` >= (curdate() - interval `seq`.`day` day))
                        AND (`l`.`created_on` &lt; ((curdate() - interval `seq`.`day` day) + interval 1 day))
                ) AS `egressLogCount`
            FROM
                (
                SELECT
                0 AS `day`
                UNION ALL
                SELECT
                1 AS `1`
                UNION ALL
                SELECT
                2 AS `2`
                UNION ALL
                SELECT
                3 AS `3`
                UNION ALL
                SELECT
                4 AS `4`
                UNION ALL
                SELECT
                5 AS `5`
                UNION ALL
                SELECT
                6 AS `6`
                ) AS `seq`;
        </createView>
    </changeSet>


</databaseChangeLog>
