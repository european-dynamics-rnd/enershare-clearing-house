            </column>
            <column name="auction_hash" type="varchar(255)">
                <constraints nullable="true"/> <!-- New field added -->
            </column>
            <column name="hash" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(50)">
